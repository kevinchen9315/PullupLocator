<% include ../partials/header %>

<div class='container'>
	<div style='margin: 20px auto;' class='row'>
		<h2 style='margin: auto'> Updating <%=location.name%> </h2>
	</div>

	<div class='row'>
		<div class='col'>

			<form action='/locations/<%=location._id%>?_method=PUT' method='POST'>
				<div class='form-group'>
					<label for='name'>Location Name</label>
					<input id='name' type='string' class='form-control' value='<%=location.name%>'' name='location[name]' required>
				</div>
				<div class='form-group'>
					<label for='desc'>Description</label>
					<input id='desc' type='text' class='form-control' name='location[desc]' value='<%=location.desc%>' required>
				</div>
				<div class='form-group'>
					<label for='gps'>GPS Coordinates</label>
					<input id='gps' type="text" class='form-control' name="gps" placeholder='(<%=location.lat + ', ' + location.lng%>)' disabled='disabled' required>
				</div>
				<div class='form-group'>
					<input id='lat' type="hidden" class='form-control' name="location[lat]" required>
				</div>
				<div class='form-group'>
					<input id='lng' type="hidden" class='form-control' name="location[lng]" required>
				</div>

				<div>
					<input type='submit' class="btn btn-primary" value='Update!'>
				</div>
			</form>
		</div>
		<div class='col googlemaps'>
			<div id="map"></div>
		</div>
	</div>
</div>

<script src='/javascript/editGoogleMap.js' type="text/javascript"></script>

<% include ../partials/footer %>