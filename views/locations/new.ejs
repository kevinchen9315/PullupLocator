<% include ../partials/header %>

<div class='container'>
	<div style='margin: 20px auto;' class='row'>
		<h2 style='margin: auto'> Add a new Location!</h2>
	</div>

	<div class='row'>
		<div class='col'>

			<form action='/locations' method='POST' enctype="multipart/form-data">
				<div class='form-group'>
					<label for='name'>Location Name</label>
					<input id='name' type='string' class='form-control' placeholder='Enter a Name' name='location[name]' required>
				</div>
				<div class='form-group'>
					<label for='desc'>Description</label>
					<input id='desc' type='text' class='form-control' name='location[desc]' required>
				</div>
				<div class='form-group'>
					<label for='image'>Upload an Image</label>
					<input id='image' type='file' accept='image/*' class='form-control' placeholder='Enter a Name' name='image'>
				</div>
				<div class='form-group'>
					<label for='gps'>GPS Coordinates</label>
					<input id='gps' type="text" class='form-control' name="gps" placeholder='Use the map to the right to enter a location' disabled='disabled' required>
				</div>
				<div class='form-group'>
					<input id='lat' type="hidden" class='form-control' name="location[lat]" required>
				</div>
				<div class='form-group'>
					<input id='lng' type="hidden" class='form-control' name="location[lng]" required>
				</div>

				<div>
					<input type='submit' class="btn btn-primary" value='Add!'>
				</div>
			</form>
		</div>
		<div class='col googlemaps'>
			<div id="map"></div>
		</div>
	</div>
</div>

<script src='/javascript/editGoogleMap.js' type="text/javascript"></script>

<% include ../partials/footer %>